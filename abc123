import java.util.Scanner;


public class Evens {
	
	public static void main (String[] args)
	{

	        Scanner input = new Scanner(System.in);
	         System.out.print("Enter a positive integer or 0 to end: ");
	         int n = input.nextInt();

	         while (n != 0)
	        {
	               System.out.print("The number of even integers between 0 and " + n + " is: ");

	              System.out.println(evens(n));

	               System.out.print("Enter a positive integer or 0 to end: ");
	                n = input.nextInt();

	           } 
	         System.out.println("Bye");

	} 

	private static int evens(int n) {
		return evensHelper(n, 0);
	}
	
	private static int evensHelper(int n, int count) {
		if (n == 0) {
			System.out.println("");
			return count;
		} else if (n % 2 == 0) {
			System.out.print(n + " ");
			return evensHelper(n - 1, count + 1);
		} else {
			return evensHelper(n - 1, count);
		}
	}
}

import java.util.Scanner;


public class GcdAndLcm {
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		
		while (true) {
			System.out.println("Enter two positive integers:");
			int a = input.nextInt();
			int b = input.nextInt();

			System.out.println("The gcd of " + a + " " + b + " is: " + gcd(a, b));
			System.out.println("The lcm of " + a + " " + b + " is: " + lcm(a, b));

			System.out.println("Run again? 1 for Yes any other digit for No:");
			if (input.nextInt() != 1) {
				System.out.println("Quitting...");
				break;
			}
		}
	}
	private static int gcd(int a, int b) {
		if (b >= a) {
			int tmp = b;
			b = a;
			a = tmp;
		}
		
		if (b == 0) {
			return a;
		} else {
			return gcd(b, a % b);
		}
	}
	
	private static int lcm(int a, int b) {
		return (a * b)/(gcd(a, b));
	}

}

import java.util.Scanner;

public class Hanoi {
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		System.out.println("Enter number of disks:");

		int disks = input.nextInt();
		int numberMoves = move(disks, 1, 3, 2);
		System.out.println("Number of moves is: " + numberMoves);
	}

	public static int move(int n, int start, int middle, int end) {
		return moveHelper(n, start, middle, end, 1);
	}

	public static int moveHelper(int n, int start, int middle, int end,
			int count) {
		if (n == 1) {
			System.out.println(start + " -> " + end);
			return count;
		} else {
			count += moveHelper(n - 1, start, end, middle, 1);
			System.out.println(start + " -> " + end);
			return moveHelper(n - 1, middle, start, end, count + 1);
		}
	}
}

import java.util.Random;
import java.util.Scanner;


public class Monty {

	private static int GOAT = 0;
	private static int CAR = 1;
	
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		System.out.println("Hello, I am Monty Hall and welcome to \"Let's Make a Deal.\" " +
				"Here is our first contestant.");

		System.out.println("Welcome to the show. Now, in front of you are three doors. " +
						"Behind two of these doors is a goat but behind the third door is a shiny " +
						"new Jaguar. You may choose one of the doors. Which will it be : 1, 2, or 3?");

		int choice = input.nextInt();
		int[] doors = getRandomDoors();
		int doorToShow = getDoorToShow(choice, doors);
		
		System.out.println("OK , you choose door " + choice + ". " +
				"But before I show you what is behind door " + choice + ", " +
				"let's take a look behind door " + doorToShow + ".  Let's open door " 
				+ doorToShow + ".  That's right, behind door " + doorToShow + " is a goat.");
		
		int lastDoor = 3 - choice - doorToShow;
		
		System.out.println("Now do you want to keep door " + choice + " or switch to door " + lastDoor + "?");
		choice = input.nextInt();
		
		if (choice != lastDoor) {
			System.out.println("You are keeping door " + choice + ".  Let's open door " + choice + " and see what is there.");
		} else {
			System.out.println("You are switching to door " + choice + ".  Let's open door " + choice + " and see what is there.");
		}
		
		if (doors[choice] == GOAT) {
			System.out.println("Sorry you got a goat.");
		} else {
			System.out.println("You won!!!");
		}
	
	}
	
	private static int[] getRandomDoors() {
		Random rand = new Random();
		int[] doors = {GOAT,GOAT,GOAT};
		doors[rand.nextInt(3)] = CAR; //put a winner in a random door
		return doors;
	}
	
	private static int getDoorToShow(int choice, int[] doors) {
		for (int i = 0; i < doors.length ; i++) {
			if (i != choice && doors[i] != CAR) {
				return i;
			}
		}
		return -1;
	}
}

import java.util.Scanner;


public class Pascal {
	
	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in);
		System.out.print("Enter the number of rows to print: ");
		int i = input.nextInt();
		int max = i;
		int leftPad = max-1;
		
		for (int y = 0; y < i; y++) {
			leftPad = leftPad / 2;
			printPascalRow(y, max);
		}
	}
	
	private static int pascal(int r, int e) {
		if (e == 0 || e == r) {
			return 1;
		} else {
			return pascal(r - 1, e - 1) + pascal(r - 1, e);
		}
	}
	
	private static void printPascalRow(int row, int max) {
		for(int col = 0; col <= row; col++)  {
			System.out.print(pascal(row, col));
			System.out.print(" ");
		}
		System.out.println("");
	}
}



